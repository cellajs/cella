{
  "name": "@cella/cdc",
  "version": "0.0.2",
  "type": "module",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "tsx src/index.ts",
    "dev": "cross-env NODE_ENV=development wait-on -i 2000 -t 60000 http://localhost:4000/health && tsx watch --env-file=../backend/.env src/index.ts",
    "build": "cross-env NODE_ENV=production tsup",
    "ts": "tsgo --pretty",
    "ts:old": "tsc --pretty",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "dotenv": "^17.3.1",
    "drizzle-orm": "1.0.0-beta.15-859cf75",
    "hono": "^4.11.9",
    "nanoid": "^5.1.6",
    "pg-logical-replication": "^2.3.0",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "shared": "workspace:*",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^24.10.13",
    "@types/ws": "^8.18.1",
    "cross-env": "^10.1.0",
    "tsup": "^8.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  }
}
