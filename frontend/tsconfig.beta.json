{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,

    "target": "ES2021",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "vite-plugin-pwa/client"],

    "paths": {
      "~/*": ["./src/*"],
    }
  },

  "include": ["src/**/*", "vite.config.ts", "../config/*", "../locales/*"],
  "exclude": ["**/node_modules", "**/dist", "**/.*/"]
}
