    "request": {
      "query": {
        "properties": {
          "q": { "type": "string", "required": false },
          "sort": {
            "type": "string",
            "required": false,
            "enum": ["createdAt"]
          },
          "order": {
            "type": "string",
            "required": false,
            "enum": ["asc", "desc"]
