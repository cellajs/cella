          "offset": { "type": "string", "required": false },
          "limit": { "type": "string", "required": false },
          "repositoryId": {
            "type": "string",
            "required": false,
            "description": "Filter by repository"
          },
          "verificationStatus": {
            "type": "string",
            "required": false,
            "enum": ["pending", "verified", "failed"]
          }
        }
      }
    }
