{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,

    "target": "es2022",
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "vite-plugin-pwa/client"],

    "paths": {
      "~/*": ["./src/*"]
    }
  },

  "include": ["src/**/*", "vite.config.ts", "../config/*", "../locales/*", "src/api-config.ts", "openapi-ts.config.ts"],
  "exclude": ["**/node_modules", "**/dist", "**/.*/"]
}
