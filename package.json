{
  "name": "cella",
  "version": "0.2.4",
  "private": false,
  "license": "MIT",
  "repository": "https://github.com/cellajs/cella",
  "description": "Intuivive TypeScript template to build local-first web apps. Implementation-ready. MIT licensed.",
  "keywords": ["template", "monorepo", "fullstack", "typescript", "hono", "drizzle", "shadcn", "postgres", "react", "vite", "PWA"],
  "author": "CellaJS <info@cellajs.com>",
  "homepage": "https://cellajs.com",
  "type": "module",
  "engines": {
    "node": ">=20.14.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "lefthook install",
    "docker": "docker compose --env-file env/.env up",
    "docker:supabase": "docker compose --env-file env/.env -f compose-supabase.yaml up",
    "docker:down": "docker compose down",
    "generate": "pnpm run generate:pg && pnpm run generate:electric",
    "generate:pg": "dotenv -e env/.env -- turbo generate:pg --filter backend --force",
    "generate:electric": "dotenv -e env/.env -- turbo generate:electric --filter backend --force",
    "migrate": "pnpm run migrate:pg && pnpm run migrate:electric",
    "migrate:pg": "dotenv -e env/.env -- turbo migrate:pg --filter backend --force",
    "migrate:electric": "dotenv -e env/.env -- turbo migrate:electric --filter backend --force",
    "seed": "pnpm run seed:user && pnpm run seed:organizations && pnpm run seed:data",
    "seed:pivotal": "dotenv -e env/.env -- turbo run seed:pivotal --filter backend --force",
    "seed:user": "dotenv -e env/.env -- turbo seed:user --filter backend --force",
    "seed:organizations": "dotenv -e env/.env -- turbo seed:organizations --filter backend --force",
    "seed:data": "dotenv -e env/.env -- turbo seed:data --filter backend --force",
    "dev": "pnpm run clean && dotenv -e env/.env -- turbo dev --filter backend --filter frontend --filter tus",
    "clean": "rimraf backend/dist frontend/dist frontend/stats",
    "check": "pnpm dlx @biomejs/biome check .",
    "check:types": "turbo check:types --force",
    "check:fix": "pnpm dlx @biomejs/biome check --apply .",
    "build": "pnpm run clean && dotenv -e env/.env -- turbo build --filter backend --filter frontend --filter tus",
    "build:dev": "dotenv -e env/.env -- turbo build:dev --filter backend --filter frontend --filter tus",
    "start": "dotenv -e env/.env -- turbo start --filter backend --filter frontend --filter tus",
    "push": "dotenv -e env/.env -- turbo push --filter backend",
    "studio": "dotenv -e env/.env -- turbo studio --filter backend",
    "studio:electric": "dotenv -e env/.env -- turbo studio:electric --filter backend",
    "email:dev": "dotenv -e env/.env -- turbo dev --filter email",
    "electrify": "dotenv -e env/.env -- turbo prepare:electric:dev --filter frontend --force"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@evilmartians/lefthook": "^1.6.14",
    "@t3-oss/env-core": "^0.9.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "rimraf": "^5.0.7",
    "turbo": "^1.13.3",
    "typescript": "^5.4.5",
    "zod": "^3.23.8"
  }
}
