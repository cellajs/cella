{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    
    "allowImportingTsExtensions": true,
    "lib": ["es2022"],

    "rootDir": "../",
    "sourceMap": true,
    "inlineSources": true,

    // Set `sourceRoot` to  "/" to strip the build path prefix
    // from generated source code references.
    // This improves issue grouping in Sentry.
    "sourceRoot": "/",

    "paths": {
      "#/*": ["./src/*"],
      "#json/*": ["../json/*"],
    },
  },
  "include": ["src/**/*", "drizzle.config.ts", "emails", "../config/*", "../json/*", "../locales/*",  "tests", "scripts", "trigger.config.ts", "../config/*", "../cdc/src/**/*"],
  "exclude": ["**/node_modules", "**/dist", "**/.*/"]
}
